<Window x:Class="WpfApplication7xungeng.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txt1" HorizontalAlignment="Left" Height="281" Margin="11,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.252"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="btn1" Content="获取巡更记录列表" HorizontalAlignment="Left" Margin="414,52,0,0" VerticalAlignment="Top" Width="93" Click="btn1_Click"/>
        <Button x:Name="btn2" Content="删除所有记录" HorizontalAlignment="Left" VerticalAlignment="Top" Width="93" RenderTransformOrigin="1.84,4.697" Margin="414,97,0,0" Click="btn2_Click"/>

    </Grid>
</Window>
